{
  "name": "obsidian-flomo-bridge",
  "version": "1.0.0",
  "description": "Bridge flomo memos to Obsidian vault",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "package:zip": "node scripts/package.mjs --format zip",
    "package:tar": "node scripts/package.mjs --format tar",
    "package:all": "npm run package:zip && npm run package:tar",
    "version": "node version-bump.mjs && git add manifest.json versions.json"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "flomo"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.11.6",
    "builtin-modules": "3.3.0",
    "esbuild": "0.17.3",
    "obsidian": "latest",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  }
}
